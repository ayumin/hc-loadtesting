<p id="notice"><%= notice %></p>

<h1>Packages</h1>
<br>
  <%= link_to 'New', new_package_path, class: "btn btn-primary btn-sm" %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>sfid</th>
      <th>Name</th>
      <th>_hc_lastop</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= link_to package.id, package %></td>
        <td><%= package.sfid%></td>
        <td><%= package.name%></td>
        <td><%= package._hc_lastop%></td>
        <td><%= link_to 'Edit', edit_package_path(package), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
